<head>
    <div id="contendodrhe">
        <div>
            <div class="navbar">
                <div id="imagen">
                    <img src="/img/logon.png"></img></div>
                    <a id="inicio" href="#">Inicio</a>
                    <button id="boton" type="button" href="#">Ingresar</button>
            </div>
    </div>
</head>
  <body>
      <div class="container">
          <h1>Registro de Encomiendas</h1>
          
          <form id="encomienda-form" action="/" method="post">
              <div class="input-group">
                  <u><h2>Remitente</h2></u>
                  <label for="nombres_remitente">Nombres Completos:</label>
                  <input type="text" id="nombres_remitente" name="nombres_remitente" required>
  
                  <label for="cedula_remitente">Numero de cedula:</label>
                  <input type="number" id="cedula_remitente" name="cedula_remitente" required>
  
                  <label for="telefono_remitente">Numero telefonico:</label>
                  <input type="number" id="telefono_remitente" name="telefono_remitente" required>
  
                  <label for="correo_remitente">Correo Electronico:</label>
                  <input type="text" id="correo_remitente" name="correo_remitente" required>
              </div>
  
              <div class="input-group">
                  <u><h2>Destinatario</h2></u>
                  <label for="nombres_destinatario">Nombres Completos:</label>
                  <input type="text" id="nombres_destinatario" name="nombres_destinatario" required>
  
                  <label for="cedula_destinatario">Numero de cedula:</label>
                  <input type="number" id="cedula_destinatario" name="cedula_destinatario" required>
  
                  <label for="telefono_destinatario">Numero telefonico:</label>
                  <input type="number" id="telefono_destinatario" name="telefono_destinatario" required>
  
                  <label for="callep_destinatario">Calle Principal:</label>
                  <input type="text" id="callep_destinatario" name="callep_destinatario" required>

                  <label for="calles_destinatario">Calle Secundaria:</label>
                  <input type="text"  id="calles_destinatario" name="calles_destinatario" required>

                  <label for="numerocasa_destinatario">Numero de Casa:</label>
                  <input type="number" id="numerocasa_destinatario" name="numerocasa_destinatario" required>
              </div>
  
              <div class="input-group">
                  <u><h2>Datos de envio</h2></u>
                  <label for="tamaño_encomienda">Tamaño de encomienda:</label>
                  <input type="number" id="tamaño_encomienda" name="tamaño_encomienda" required>
  
                  <label for="fecha_envio">Fecha y Hora de envio:</label>
                  <input type="datetime-local" id="fecha_envio" name="fecha_envio" required>
  
                  <label for="registro_transporte">Numero de registro de transporte:</label>
                  <input type="number" id="registro_transporte" name="registro_transporte" required>
              </div>
  
              <button type="submit">Registrar</button>
              <button type="submit" style="background-color: red;">Cancelar</button>
          </form>
      </div>
  </body>
