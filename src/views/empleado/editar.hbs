<link rel="stylesheet" href="/css/empleados/editar.css">
{{#each lista}}
<form action="/empleado/editar/{{id_empleado}}" method="post">
<body> 
    <head>
      <div id="contendodrhe">
        <div>
          <div class="navbar">
            <div id="imagen">
              <img src="/img/logon.png"></img>
            </div>

            <a id="administrador" href="#">Administrador</a>
            <img id="img2" src="/img/perfil.png" alt="">
          </div>
        </div>
    </head>
    <h1>Actualización de Empleados</h1>
    <div id="contenedor">

      <div class="row">

        <div id="tarjeta">
          <u>
            <h2>Datos Personales</h2>
          </u>

          <div>
            <label id="name" for="nombre">Nombre</label> <br>
            <input id="nombre" type="text" name="nombres_empleado" value="{{nombres_empleado}}" required
              placeholder="Ingrese el titulo del video ">
          </div>
          <div>
            <label id="apelli" for="apellido">Apellido:</label>
            <input id="apellido" type="text" name="apellido_empleado" value="{{apellido_empleado}}" required
              placeholder="Ingrese el titulo del video ">
          </div>
          <div>
            <label id="numce" for="cedula">Número de Cédula:</label> <br>
            <input id="cedula" type="text" name="cedula_empleado" value="{{cedula_empleado}}" required
              placeholder="Ingrese el titulo del video ">

          </div>
          <div>
            <label id="date" for="fecha_nacimiento">Fecha de Nacimiento:</label>
            <input id="fecha_nacimiento" type="date" name="fecha_nacimiento_empleado" value="{{fecha_nacimiento_empleado}}" required
              placeholder="Ingrese el titulo del video ">

          </div>

          <div>
            <label id="sexo" for="sexo">Sexo:</label>
            <select id="sexoSele" name="sexo_empleado" value="{{sexo_empleado}}" required>
              <option value="masculino">Masculino</option>
              <option value="femenino">Femenino</option>
              <option value="otro">Otro</option> <br>
            </select>
          </div>
          <h3>Lugar de residencia</h3>
          <div>
            <label id="calleP" for="nombre">Calle principal</label>
            <input id="callepri" type="text" name="calle_principal_empleado" value="{{calle_principal_empleado}}" required
              placeholder="Ingrese el titulo del video ">

          </div>
          <div>
            <label id="calleSe" for="nombre">Calle secundaria</label>
            <input id="callesecu" type="text" name="calle_secundaria" value="{{calle_secundaria}}" required
              placeholder="Ingrese el titulo del video ">
          </div>
          <div>
            <h3>Contactos</h3>
            <label id="telfC" for="telefonocelu">Celular</label> <br>
            <input id="telefonoC" type="text" name="celular_empleado" value="{{celular_empleado}}" required
              placeholder="Ingrese el titulo del video ">
          </div>
          <div>
            <label id="teleCo" for="telefonoconv">Telefono Convencional</label>
            <input id="telefonoCo" type="text" name="telefonoCo" value="{{telefono_empleado}}" required
              placeholder="Ingrese el titulo del video ">
          </div>
          <div>
            <label id="email" for="emailCorreo">Email</label>
            <input id="Email" type="text" name="email_empleado" value="{{email_empleado}}" required
              placeholder="Ingrese el titulo del video ">
          </div>
          <div>
            <label id="area" for="Area">Area:</label> <br> <br>
            <select id="AreaTra" name="area_empleado" value="{{area_empleado}}" required>
              <option value="chofer">Chofer</option>
              <option value="bodegero">Bodegero</option>
              <option value="buses">Buses</option>
            </select>
          </div> <br> <br>
        <button type="submit">Actualizar</button>
        <button type="submit" style="background-color: red;">Cancelar</button>
      </div>
       </div>
     </div>
    </div>
</form>
{{/each}}
  

